worker_processes 4;
worker_rlimit_nofile 40000;

events {
    worker_connections 8192;
}

stream {
    upstream rancher_servers_http {
        least_conn;
        server ${node_ips[0]}:80 max_fails=3 fail_timeout=5s;
        server ${node_ips[1]}:80 max_fails=3 fail_timeout=5s;
        server ${node_ips[2]}:80 max_fails=3 fail_timeout=5s;
    }
    server {
        listen 80;
        proxy_pass rancher_servers_http;
    }

    upstream rancher_servers_https {
        least_conn;
        server ${node_ips[0]}:443 max_fails=3 fail_timeout=5s;
        server ${node_ips[1]}:443 max_fails=3 fail_timeout=5s;
        server ${node_ips[2]}:443 max_fails=3 fail_timeout=5s;
    }
    server {
        listen     443;
        proxy_pass rancher_servers_https;
    }

}
